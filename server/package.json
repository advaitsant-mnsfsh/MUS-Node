{
  "name": "mus-server",
  "version": "1.0.0",
  "description": "Node.js server for MUS project",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "npx drizzle-kit push && esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:pg-native --external:puppeteer --external:puppeteer-extra --external:puppeteer-extra-plugin-stealth --external:@axe-core/puppeteer",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@axe-core/puppeteer": "^4.11.0",
    "@google/genai": "^1.34.0",
    "better-auth": "^1.4.18",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "jsonrepair": "^3.13.1",
    "pg": "^8.18.0",
    "puppeteer": "^21.5.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "resend": "^3.5.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}